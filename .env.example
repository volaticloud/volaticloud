# VolatiCloud Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
VOLATICLOUD_HOST=0.0.0.0
VOLATICLOUD_PORT=8080

# Database Configuration
# For local development (SQLite):
VOLATICLOUD_DATABASE=sqlite://./data/volaticloud.db
# For production (PostgreSQL):
# VOLATICLOUD_DATABASE=postgresql://user:password@localhost:5432/volaticloud?sslmode=require

# Monitor Configuration
# Leave empty for single-instance mode
# VOLATICLOUD_ETCD_ENDPOINTS=
VOLATICLOUD_MONITOR_INTERVAL=30s

# Keycloak Authentication & Authorization
# Required for JWT validation and UMA resource management
VOLATICLOUD_KEYCLOAK_URL=https://auth.volaticloud.com
VOLATICLOUD_KEYCLOAK_REALM=dev
VOLATICLOUD_KEYCLOAK_CLIENT_ID=volaticloud
