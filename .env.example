# VolatiCloud Backend Environment Variables
# Copy to .env and fill in the required values

# === Server ===
VOLATICLOUD_HOST=0.0.0.0
VOLATICLOUD_PORT=8080

# === Database ===
# sqlite://./data/volaticloud.db or postgresql://user:pass@host:5432/dbname
VOLATICLOUD_DATABASE=sqlite://./data/volaticloud.db

# === Distributed Monitoring (optional) ===
# Comma-separated etcd endpoints. If empty, runs in single-instance mode
# VOLATICLOUD_ETCD_ENDPOINTS=http://localhost:2379

# === Monitoring ===
VOLATICLOUD_MONITOR_INTERVAL=30s
VOLATICLOUD_DATA_DOWNLOAD_TIMEOUT=12h

# === Keycloak (required) ===
VOLATICLOUD_KEYCLOAK_URL=https://keycloak.volaticloud.com
VOLATICLOUD_KEYCLOAK_REALM=volaticloud
VOLATICLOUD_KEYCLOAK_CLIENT_ID=volaticloud-api
VOLATICLOUD_KEYCLOAK_CLIENT_SECRET=
VOLATICLOUD_KEYCLOAK_DASHBOARD_CLIENT_ID=dashboard

# === Email Alerts (optional) ===
# VOLATICLOUD_SENDGRID_API_KEY=
VOLATICLOUD_ALERT_FROM_EMAIL=alerts@volaticloud.com
VOLATICLOUD_ALERT_FROM_NAME=VolatiCloud Alerts
VOLATICLOUD_ALERT_BATCH_INTERVAL=1h

# === Stripe Billing (optional) ===
# If not set, billing features are disabled (graceful degradation)
# Plans are configured entirely in Stripe (products with metadata[app]=volaticloud)
# VOLATICLOUD_STRIPE_API_KEY=sk_...
# VOLATICLOUD_STRIPE_WEBHOOK_SECRET=whsec_...
# VOLATICLOUD_CONSOLE_URL=https://console.volaticloud.com
# VOLATICLOUD_STRIPE_STARTER_PRICE_ID=price_...

# === Redis (optional) ===
# For GraphQL subscriptions. If empty, uses in-memory pub/sub
# VOLATICLOUD_REDIS_URL=redis://localhost:6379

# === CORS ===
VOLATICLOUD_CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000
