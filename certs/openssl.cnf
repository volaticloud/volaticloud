# OpenSSL configuration for VolatiCloud E2E certificates
# Generates a CA and wildcard certificate for *.volaticloud.loc

[req]
default_bits = 2048
prompt = no
default_md = sha256
distinguished_name = dn
x509_extensions = v3_ca

[dn]
C = US
ST = California
L = San Francisco
O = VolatiCloud
OU = Development
CN = VolatiCloud Development CA

[v3_ca]
subjectKeyIdentifier = hash
authorityKeyIdentifier = keyid:always,issuer
basicConstraints = critical, CA:true
keyUsage = critical, digitalSignature, cRLSign, keyCertSign

[server_req]
default_bits = 2048
prompt = no
default_md = sha256
distinguished_name = server_dn
req_extensions = server_req_ext

[server_dn]
C = US
ST = California
L = San Francisco
O = VolatiCloud
OU = Development
CN = *.volaticloud.loc

[server_req_ext]
subjectAltName = @alt_names

[server_cert]
subjectKeyIdentifier = hash
authorityKeyIdentifier = keyid,issuer
basicConstraints = CA:FALSE
keyUsage = critical, digitalSignature, keyEncipherment
extendedKeyUsage = serverAuth
subjectAltName = @alt_names

[alt_names]
DNS.1 = *.volaticloud.loc
DNS.2 = volaticloud.loc
DNS.3 = console.volaticloud.loc
DNS.4 = auth.volaticloud.loc
DNS.5 = localhost
IP.1 = 127.0.0.1
