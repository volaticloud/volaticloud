:8080 {
	# Enable gzip compression
	encode gzip

	# Set root directory
	root * /srv

	# Reverse proxy for API requests to backend
	# Strip /api prefix: /api/query -> backend/query
	handle_path /api/* {
		reverse_proxy http://anytrade-backend-anytrade-backend:8080
	}

	# Enable file server
	file_server

	# SPA fallback - serve index.html for all routes
	# This allows React Router to handle routing
	try_files {path} /index.html

	# Security headers
	header {
		# Prevent clickjacking
		X-Frame-Options "DENY"

		# Prevent MIME type sniffing
		X-Content-Type-Options "nosniff"

		# Enable XSS protection
		X-XSS-Protection "1; mode=block"

		# Referrer policy
		Referrer-Policy "strict-origin-when-cross-origin"

		# Remove server header
		-Server
	}

	# Cache static assets
	@static {
		path *.js *.css *.woff *.woff2 *.ttf *.eot *.svg *.png *.jpg *.jpeg *.gif *.ico
	}
	header @static Cache-Control "public, max-age=31536000, immutable"

	# Logging
	log {
		output stdout
		format json
	}
}