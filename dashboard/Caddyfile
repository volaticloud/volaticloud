:8080 {
	# Enable gzip compression
	encode gzip

	# Reverse proxy /gateway/* to backend (GraphQL, bot proxy, health)
	handle /gateway/* {
		reverse_proxy http://volaticloud-backend-volaticloud-backend:8080
	}

	# Serve FreqUI static files at /frequi/*
	# FreqUI is built with base path /frequi/ so assets already have correct prefix
	handle /frequi/* {
		root * /srv

		# SPA fallback - serve frequi/index.html for all frequi routes
		@frequi_spa {
			path /frequi/*
			not path /frequi/assets/*
			not path /frequi/favicon.ico
		}
		rewrite @frequi_spa /frequi/index.html

		file_server
	}

	# Serve dashboard static files at root
	handle {
		root * /srv

		# SPA fallback - serve index.html for all routes
		try_files {path} /index.html

		file_server
	}

	# Security headers
	header {
		# Prevent clickjacking (dashboard only, not frequi iframe)
		# X-Frame-Options is handled per-path below

		# Prevent MIME type sniffing
		X-Content-Type-Options "nosniff"

		# Enable XSS protection
		X-XSS-Protection "1; mode=block"

		# Referrer policy
		Referrer-Policy "strict-origin-when-cross-origin"

		# Remove server header
		-Server
	}

	# Allow FreqUI to be embedded in iframe (same-origin)
	# Don't set X-Frame-Options for /frequi/* paths
	@not_frequi {
		not path /frequi/*
	}
	header @not_frequi X-Frame-Options "DENY"

	# Cache static assets
	@static {
		path *.js *.css *.woff *.woff2 *.ttf *.eot *.svg *.png *.jpg *.jpeg *.gif *.ico
	}
	header @static Cache-Control "public, max-age=31536000, immutable"

	# Logging
	log {
		output stdout
		format json
	}
}